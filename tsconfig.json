{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"],
    "baseUrl": "./app",
    "paths": {
      "*": [
        "*",
        "lib/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}